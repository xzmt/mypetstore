    <servlet-mapping>
        <servlet-name>AjaxWindowServlet</servlet-name>
        <url-pattern>/ajaxWindow</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ajaxUpdateServlet</servlet-name>
